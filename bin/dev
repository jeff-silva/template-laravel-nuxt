#!/bin/sh

reset

if [ ! -f "./.env" ]; then
    cp "./.env_example" "./.env"
fi

if [ ! -f "./.docker/backend/.env" ]; then
    cp "./.docker/backend/.env_example" "./.docker/backend/.env"
fi

if [ ! -f "./.docker/frontend/.env" ]; then
    cp "./.docker/frontend/.env_example" "./.docker/frontend/.env"
fi

if [ ! -f "./.docker/mysql/.env" ]; then
    cp "./.docker/mysql/.env_example" "./.docker/mysql/.env"
fi

if [ ! -f "./.docker/phpmyadmin/.env" ]; then
    cp "./.docker/phpmyadmin/.env_example" "./.docker/phpmyadmin/.env"
fi

docker-compose up --build --force-recreate --remove-orphans