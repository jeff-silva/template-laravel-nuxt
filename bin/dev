#!/bin/sh

reset

folders=(
  "."
  "./.docker/backend"
  "./.docker/frontend"
  "./.docker/mysql"
  "./.docker/phpmyadmin"
  "./.docker/websocket"
)

for folder in "${folders[@]}"
do
  if [ ! -f "${folder}/.env_example" ]; then
    continue
  fi

  if [ ! -f "${folder}/.env" ]; then
    cp "${folder}/.env_example" "${folder}/.env"
  fi
done

docker-compose up --build --force-recreate --remove-orphans